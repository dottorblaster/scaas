{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2018", "DOM"],
    "paths": {
      "*": ["*"]
    },
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
